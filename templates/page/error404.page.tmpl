{{template "error" .}}

{{define "title"}}Error 404: Page Not Found{{end}}

{{define "content"}}
    <div id="not-found">
        <div class="not-found">
            <div class="not-found-error-title">
                <h1>Oops!</h1>
            </div>
            <h2>404 - Page Not Found</h2>
            <p>The page might have been removed or temporary unavaliable.</p>
            <a href="/">Go to Home Page</a>
        </div>
    </div>
{{end}}