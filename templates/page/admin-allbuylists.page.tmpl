{{template "admin" .}}

{{define "title"}}Admin: All Buy List{{end}}

{{define "css"}}
    <link rel="stylesheet" href="/static/css/admin.css">
{{end}}

{{define "content"}}
{{$buyLists := index .Data "buyLists"}}
{{$allBooks := index .Data "allBooks"}}
{{$allUsers := index .Data "allUsers"}}
<div>
    <div>
        <h1>Add Book to User Buy List</h1>
        <form action="/admin/buyLists/create" method="post" id="createForm">
            <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">
            <div>
                <label for="book_id">Book: </label>
                <select name="book_id" id="book_id">
                    {{range $allBooks}}
                    <option value="{{.ID}}">{{.Title}}</option>
                    {{end}}
                </select>
                {{with .Form.Errors.Get "book_id"}}
                    <label>{{.}}</label>
                {{end}}
            </div>
            <div>
                <label for="user_id">User: </label>
                <select name="user_id" id="user_id">
                    {{range $allUsers}}
                    <option value="{{.ID}}">{{.Username}}</option>
                    {{end}}
                </select>
                {{with .Form.Errors.Get "user_id"}}
                    <label>{{.}}</label>
                {{end}}
            </div>
            <input type="submit" value="Add">
        </form>
    </div><hr>
    <div>
        <h1>Buy List</h1>
    </div>
    <div>
        <table>
            <thead>
                <tr>
                    <th>Book ID</th>
                    <th>User ID</th>
                    <th>Created At</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{range $buyLists}}
                <tr>
                    
                    <td>{{.BookID}}</td>
                    <td>{{.UserID}}</td>
                    <td>{{TimeSince .CreatedAt}}</td>
                    <td>
                        <button><a href="/admin/buyLists/detail/{{.BookID}}/{{.UserID}}">Detail</a></button>
                        <button id="delete-{{.BookID}}-{{.UserID}}" onclick="showDeleteForm(this, '{{.BookID}}-{{.UserID}}')">Delete</button>
                        <form action="/admin/buyLists/detail/{{.BookID}}/{{.UserID}}/delete" method="post" class="no-display" id="{{.BookID}}-{{.UserID}}">
                            <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">
                            <p>Do you want to delete this relation ship?</p>
                            <input type="submit" value="Delete">
                            <button onclick="removeForm('{{.BookID}}-{{.UserID}}')" type="button">No</button>
                        </form>
                    </td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>
</div>
{{end}}

{{define "js"}}
    <script src="/static/js/admin.js"></script>
{{end}}