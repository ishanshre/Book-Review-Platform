{{template "admin" .}}

{{define "title"}}Admin: All Buy List{{end}}

{{define "css"}}
    <link rel="stylesheet" href="/static/css/admin.css">
{{end}}

{{define "content"}}
{{$allBooks := index .Data "allBooks"}}
{{$allUsers := index .Data "allUsers"}}
<div>
    <div class="d-flex d-flex-col d-gap align-center m-d5">
        <h1>Add Book to User Buy List</h1>
        <form action="/admin/buyLists/create" method="post" id="createForm" class="d-flex d-flex-col align-center">
            <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">
            <div>
                <label for="book_id">Book: </label>
                <select name="book_id" id="book_id">
                    {{range $allBooks}}
                    <option value="{{.ID}}">{{.Title}}</option>
                    {{end}}
                </select>
                {{with .Form.Errors.Get "book_id"}}
                    <label>{{.}}</label>
                {{end}}
            </div>
            <div>
                <label for="user_id">User: </label>
                <select name="user_id" id="user_id">
                    {{range $allUsers}}
                    <option value="{{.ID}}">{{.Username}}</option>
                    {{end}}
                </select>
                {{with .Form.Errors.Get "user_id"}}
                    <label>{{.}}</label>
                {{end}}
            </div>
            <input type="submit" value="Add" class="add-button">
        </form>
    </div>
    <section class="container d-flex-col d-dark b-radius m-br2">
        <div class="d-flex justify-center d-gap search-all-books">
            <input type="hidden" id="search-type" value="admin-buylists">
            <input type="search" class="search-all-books-input" id="search-book" placeholder="Search Read List..." onkeyup="display()">
            <select id="order" onchange="display()">
                <option value="asc">Ascending Order</option>
                <option value="desc" >Descending Order</option>
            </select>
            <select id="limit" onchange="display()">
                <option value="10">10</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
        </div>
    </section>
    <div class="main-content-title d-gap align-center">
        <h1>All Buy Lists</h1>
    </div>
    
    <!-- This is the table section -->
    <div class="main-content-table">
        <table>
            <!-- header section -->
            <thead>
                <tr>
                    <th>BOOK NAME</th>
                    <th>USERNAME</th>
                    <th>CREATED AT</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <!-- body section -->
            <tbody id="displayDiv">
                
            </tbody>
        </table>
    </div>
    <nav class="pagination-container">

        <div id="pagination-numbers">

        </div>

    </nav>
</div>
{{end}}

{{define "js"}}
    <script src="/static/js/admin.js"></script>
    <script src="/static/js/search.js"></script>
{{end}}