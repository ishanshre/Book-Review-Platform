{{template "base" .}}

{{define "title"}}Books{{end}}


{{define "content"}}
<main>
    <section class="container d-flex-col">
        <div class="d-flex justify-center d-gap search-all-books">
            <input type="search" class="search-all-books-input" id="search-book" placeholder="Search Book..." onkeyup="displayBooks()">
            <select id="order" onchange="displayBooks()">
                <option value="asc">Ascending Order</option>
                <option value="desc" >Descending Order</option>
            </select>
            <select id="limit" onchange="displayBooks()">
                <option value="10">10</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
        </div>
        <div class="d-flex justify-center">
            
        </div>
    </section>
    <section class="container d-flex-col text-orange">
        <div class="card-heading text-center">
            <span>Books</span>
        </div>
        {{$books := index .Data "books"}}
        <div class="card-box-container" id="books-display">
            
        </div>

    </section>
    </section>
</main>
{{end}}

{{define "js"}}
    <script src="/static/js/all-books.js"></script>
{{end}}